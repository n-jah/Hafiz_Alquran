<!-- res/layout/item_question.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:radius="26dp"
    app:cardBackgroundColor="#FFFDFA"
    app:cardCornerRadius="20dp"
    android:elevation="0dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
>

        <!-- Collapsed Question View -->
        <LinearLayout
            android:background="@drawable/gradient_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >

            <!-- Question Number Circle -->
            <TextView
                android:id="@+id/tvQuestionNumber"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Question header -->
            <TextView
                android:layout_marginEnd="5dp"
                android:id="@+id/tvQuestionHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="السؤال"
                android:fontFamily="@font/authmany_font"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"/>
            <!-- Toggle Icon -->
            <ImageView
                android:id="@+id/btnToggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                app:tint="@color/dark_blue" />


        </LinearLayout>
        <!-- Question Text -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvQuestionHeadOfQuesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="15dp"
                android:text="السؤال"
                android:fontFamily="@font/authmany_font"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginEnd="15dp"
                android:text="من  :"
                android:fontFamily="@font/authmany_font"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvQuestionEndOfQuesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="15dp"
                android:text="السؤال"
                android:fontFamily="@font/authmany_font"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginEnd="10dp"
                android:text=" إلى قوله : "
                android:fontFamily="@font/authmany_font"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue" />

        </LinearLayout>


        <!-- Expanded Answer View -->
        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الاجابة"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/authmany_font"
            android:paddingTop="8dp"
            android:textColor="@color/dark_blue"
            android:visibility="gone" />



        <!-- Grading Section -->
        <LinearLayout
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الدرجه :"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Slider for Grade Selection -->
            <com.google.android.material.slider.Slider
                android:layoutDirection="ltr"
                android:id="@+id/grade_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="5"
                android:value="0"
                app:trackColorActive="@color/dark_blue"
                app:trackColorInactive="#DF2A2A"
                app:labelBehavior="floating"
                app:labelStyle="@style/Widget.MaterialComponents.Tooltip"
                style="@style/SliderStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gradingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
        android:padding="12dp"
        android:background="@drawable/rounded_background">

        <!-- Answer Text Section -->
        <TextView
            android:id="@+id/answerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Answer Here"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:paddingBottom="8dp"/>

    </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>
